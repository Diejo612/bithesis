              <h2>Datos de tu entrevista</h2>
              <div class="d-flex">
                <h6 class="fecha">Fecha:</h6>
                <h6><strong><%= @date %></strong></h6>
              </div>
              <div>
              <div class="d-flex">
                <h6 class="fecha">Hora</h6>
