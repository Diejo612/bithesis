<div class="simple-calendar">
  <div class="row">
    <div class="col-4 text-center mt-2 mb-2">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    </div>
    <div class="col-4 text-center mt-2 mb-2">
      <h5><span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span></h5>
    </div>
    <div class="col-4 text-center mt-2 mb-2">
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="tabla_calendario">
      <% date_range.each_slice(7) do |dates| %>
        <tr>
          <% dates.each do |date| %>
            <%= content_tag :td, class: calendar.td_classes_for(date) do %>
              <% passed_block.call date.day, sorted_events.fetch(date, []) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="text-center"><%= link_to 'Crear reuniÃ³n', new_meeting_path, class: 'btn-yours' %></p>
</div>
