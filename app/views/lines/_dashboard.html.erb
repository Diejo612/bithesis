<div class='container-dashboard'>
  <div class='sidebar'>
    <%= link_to '/' do %>
      <div class="logo-tipo">
        <%= image_tag 'logo.png' %>
        <h3>
          Bi.Thesis
        </h3>
      </div>
    <% end %>
      <div class="bar-lines">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <% @lines.each_with_index do |line, i| %>
            <% if i.zero? %>
              <a class="nav-link active text-center mb-3" id="v-pills-<%= line.abrv %>-tab" data-toggle="pill" href="#v-pills-<%= line.abrv %>" role="tab" aria-controls="v-pills-<%= line.abrv %>" aria-selected="true" data-placement="right" title="<%= line.name%>"><i class="<%= line.icon_tag %>"></i></a>
            <% else %>
              <a class="nav-link text-center mb-3" id="v-pills-<%= line.abrv %>-tab" data-toggle="pill" href="#v-pills-<%= line.abrv %>" role="tab" aria-controls="v-pills-<%= line.abrv %>" aria-selected="false" title="<%= line.name%>" ><i class="<%= line.icon_tag %>"></i></a>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
  <div class="main-dashboard">
    <div class='main-header'>
      <h1>
        Welcome <span><%= current_user.first_name %></span>
      </h1>
      <div class="avatar-btn dropdown-toggle" id="dropdownMenu2" data-toggle="dropdown" aria-expanded="false">
        <%# <i class="fas fa-bars"></i> %>
        <% if current_user.photo.key %>
              <%= cl_image_tag current_user.photo.key, class: "avatar" %>
            <% else %>
              <%= image_tag 'avatar-default.jpg', class: "avatar" %>
            <% end %>
      </div>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <%= link_to "Mi perfil", about_path, class: "dropdown-item" %>
          <%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>

    </div>
    <div class="bar-space"></div>
    <div class="tab-content" id="v-pills-tabContent">
          <% @lines.each_with_index do |line,i| %>
              <% if i.zero? %>
                <div class="tab-pane fade show active" id="v-pills-<%= line.abrv %>" role="tabpanel" aria-labelledby="v-pills-<%= line.abrv %>-tab">
                  <h3><%= line.name %></h3>

                  <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                      <% line.stations.each_with_index do |station,i| %>
                        <% if i.zero? %>
                          <a class="nav-link active" id="nav-<%= station.abrv %>-tab" data-toggle="tab" href="#nav-<%= station.abrv %>" role="tab" aria-controls="nav-<%= station.abrv %>" aria-selected="true"><%= station.name %></a>
                        <% else %>
                          <a class="nav-link" id="nav-<%= station.abrv %>-tab" data-toggle="tab" href="#nav-<%= station.abrv %>" role="tab" aria-controls="nav-<%= station.abrv %>" aria-selected="false"><%= station.name %></a>
                        <% end %>
                      <% end %>
                    </div>
                  </nav>

                  <div class="tab-content" id="nav-tabContent">
                    <% line.stations.each_with_index do |station,i| %>
                        <% if i.zero? %>
                          <div class="tab-pane fade show active" id="nav-<%= station.abrv %>" role="tabpanel" aria-labelledby="nav-<%= station.abrv %>-tab">
                            <div class="content-dash">
                              <p>
                              <%= station.content %>
                              </p>
                              <% if station.tasks %>
                                <% station.tasks.each do |task| %>
                                  <div class='container-video'>
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0;"><iframe src="<%= task.video_url %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
                                  </div>
                                <% end %>
                              <% end %>
                            </div>
                          </div>
                        <% else %>
                          <div class="tab-pane fade" id="nav-<%= station.abrv %>" role="tabpanel" aria-labelledby="nav-<%= station.abrv %>-tab">
                            <div class="content-dash">
                              <p>
                              <%= station.content %>
                              </p>
                              <% if station.tasks %>
                                <% station.tasks.each do |task| %>
                                  <div class='container-video'>
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0;"><iframe src="<%= task.video_url %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
                                  </div>                                <% end %>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                    <% end %>
                  </div>

                </div>
              <% else %>
                <div class="tab-pane fade" id="v-pills-<%= line.abrv %>" role="tabpanel" aria-labelledby="v-pills-<%= line.abrv %>-tab">
                  <h3><%= line.name %></h3>

                  <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                      <% line.stations.each_with_index do |station,i| %>
                        <% if i.zero? %>
                          <a class="nav-link active" id="nav-<%= station.abrv %>-tab" data-toggle="tab" href="#nav-<%= station.abrv %>" role="tab" aria-controls="nav-<%= station.abrv %>" aria-selected="true"><%= station.name %></a>
                        <% else %>
                          <a class="nav-link" id="nav-<%= station.abrv %>-tab" data-toggle="tab" href="#nav-<%= station.abrv %>" role="tab" aria-controls="nav-<%= station.abrv %>" aria-selected="false"><%= station.name %></a>
                        <% end %>
                      <% end %>
                    </div>
                  </nav>

                  <div class="tab-content" id="nav-tabContent">
                    <% line.stations.each_with_index do |station,i| %>
                        <% if i.zero? %>
                          <div class="tab-pane fade show active" id="nav-<%= station.abrv %>" role="tabpanel" aria-labelledby="nav-<%= station.abrv %>-tab">
                            <div class="content-dash">
                              <p>
                                <%= station.content %>
                              </p>
                              <% if station.tasks %>
                                <% station.tasks.each do |task| %>
                                  <div class='container-video'>
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0;"><iframe src="<%= task.video_url %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
                                  </div>                                <% end %>
                              <% end %>
                            </div>
                          </div>
                        <% else %>
                          <div class="tab-pane fade" id="nav-<%= station.abrv %>" role="tabpanel" aria-labelledby="nav-<%= station.abrv %>-tab">
                            <div class="content-dash">
                              <p>
                                <%= station.content %>
                              </p>
                              <% if station.tasks %>
                                <% station.tasks.each do |task| %>
                                  <div class='container-video'>
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0;"><iframe src="<%= task.video_url %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
                                  </div>                                <% end %>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                    <% end %>
                  </div>

                </div>
              <% end %>
          <% end %>
        </div>
  </div>
</div>
